@model WebWeatherApp.Models.Weather

@{
    ViewData["Title"] = "Today's Weather";
}

<div class="sidenav">
    <div class="sidenavLinks">
        <a href="#">Change Location</a>
        <a href="#">Tomorrow</a>
        <a href="#">Week</a>
        <a href="#">Celcius</a>
    </div>
</div>

<table class="WeatherBox">  
    <tbody>
        <tr>
            <td style="border-top-left-radius:15px; border-top-right-radius:15px">
                <div class="mainWeather">
                    <div class="shadow">
                        <div class="content">
                            <h1>+17 <img src="https://cdn.weatherapi.com/weather/64x64/day/113.png" alt="Cloudy Weather" class="mainIcon" /></h1>
                            <h5 style="color:white">Today's weather: Sunny </h5>
                            <button class="mainButton">See Hourly</button>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="list-item">
                    <div class="icon"><img src="~/media/secondWindIcon.png" alt="Wind Icon" /></div>
                    <div class="content">
                        <p class="title">Wind</p>
                        <p class="subtitle">WNW</p>
                    </div>
                    <div class="icon"><img src="~/media/humidityIcon.png" alt="Humidity Icon" /></div>
                    <div class="content">
                        <p class="title">Humidity</p>
                        <p class="subtitle">61%</p>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="list-item">
                    <div class="icon"><img src="~/media/secondWindIcon.png" alt="Wind Icon" /></div>
                    <div class="content">
                        <p class="title">Wind</p>
                        <p class="subtitle">WNW</p>
                    </div>
                    <div class="icon"><img src="~/media/humidityIcon.png" alt="Humidity Icon" /></div>
                    <div class="content">
                        <p class="title">Humidity</p>
                        <p class="subtitle">61%</p>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="border-bottom-left-radius:15px; border-bottom-right-radius: 15px">
                <div class="list-item">
                    <div class="icon"><img src="~/media/secondWindIcon.png" alt="Wind Icon" /></div>
                    <div class="content">
                        <p class="title">Wind</p>
                        <p class="subtitle">WNW</p>
                    </div>
                    <div class="icon"><img src="~/media/humidityIcon.png" alt="Humidity Icon" /></div>
                    <div class="content">
                        <p class="title">Humidity</p>
                        <p class="subtitle">61%</p>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>