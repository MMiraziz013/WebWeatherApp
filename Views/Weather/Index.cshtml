@model WebWeatherApp.Models.Weather

@{
    ViewData["Title"] = "Today's Weather";
}

<div class="sidenav">
    <div class="sidenavLinks">
        <a href="#">Change Location</a>
        <a href="#">Tomorrow</a>
        <a href="#">Week</a>
        <a href="#">Celcius</a>
    </div>
</div>

<!-- Location input form -->
<form asp-action="GetWeather" method="post">
    <label for="location">Enter Location:</label>
    <input type="text" id="location" name="location" required />
    <button type="submit">Get Weather</button>
</form>

<table class="WeatherBox">  
    <tbody>
        <tr>
            <td style="border-top-left-radius:15px; border-top-right-radius:15px">
                <div class="mainWeather">
                    <div class="shadow">
                        <div class="content">
                            <h1>@Model.Temperature<img src="https:@Model.Icon" class="mainIcon" /></h1>
                            <h5 style="color:white">Today's weather: @Model.Condition </h5>
                            <button class="mainButton">See Hourly</button>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="list-item" style="margin-top:10px !important;">
                    <div class="icon"><img src="~/media/compassIcon.png" alt="Compass Icon" /></div>

                    <div class="content">
                        <p class="title">Wind Direction</p>
                        <p class="subtitle">@Model.WindDirection</p>
                    </div>

                    <div class="icon"><img src="~/media/humidityIcon.png" alt="Humidity Icon" /></div>

                    <div class="content">
                        <p class="title">Humidity</p>
                        <p class="subtitle">@Model.Humidity</p>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="list-item">
                    <div class="icon"><img src="~/media/windspeedIcon.png" alt="Wind Speed Icon" /></div>
                    <div class="content">
                        <p class="title">Wind Speed</p>
                        <p class="subtitle">@Model.WindSpeed</p>
                    </div>
                    <div class="icon"><img src="~/media/visibilityIcon.png" alt="Humidity Icon" /></div>
                    <div class="content">
                        <p class="title">Visibility</p>
                        <p class="subtitle">@Model.Visibility</p>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="border-bottom-left-radius:15px; border-bottom-right-radius: 15px">
                <div class="list-item">
                    <div class="icon"><img src="~/media/secondWindIcon.png" alt="Wind Icon" /></div>
                    <div class="content">
                        <p class="title">Blank</p>
                        <p class="subtitle">Need to fill</p>
                    </div>
                    <div class="icon"><img src="~/media/humidityIcon.png" alt="Humidity Icon" /></div>
                    <div class="content">
                        <p class="title">Blank</p>
                        <p class="subtitle">Need to fill</p>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>